<%= form_for @state do |f| %>
  <div id="form-container">
    <%= fields_for :reservation do |reservation| %>
      <div>
        <%= reservation.label 'Full Name' %>
        <%= reservation.text_field :name, placeholder: 'Juan PÃ©rez', required: true %>
      </div>

      <div>
        <%= reservation.label 'Email' %>
        <%= reservation.email_field :mail, placeholder: 'jperez@mail.cl', required: true %>
      </div>

      <div>
        <%= reservation.label 'Phone' %>
        <%= reservation.text_field :phone, placeholder: '+56 9 1234 5678', required: true %>
      </div>

      <div>
        <%= reservation.label 'Comments (optional)' %>
        <%= reservation.text_area :comment %>
      </div>
